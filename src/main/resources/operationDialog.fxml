<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.morichan.retuss.controller.OperationDialogController">
   <children>
      <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="messageLabel" textAlignment="CENTER" textFill="#f20404" />
            <HBox spacing="5.0">
               <children>
                  <Label text="Class Name">
                     <HBox.margin>
                        <Insets right="50.0" top="3.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="classNameComboBox" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox spacing="20.0">
               <children>
                  <Label text="Operation">
                     <HBox.margin>
                        <Insets right="53.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="operationTextField" prefWidth="150.0" />
               </children>
            </HBox>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button fx:id="createBtn" mnemonicParsing="false" onAction="#createOperation" text="Create" />
              </buttons>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </ButtonBar>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
