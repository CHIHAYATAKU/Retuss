<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.morichan.retuss.controller.MessageDialogController">
   <children>
      <VBox spacing="20.0">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Label maxWidth="-Infinity" minWidth="-Infinity" prefWidth="80.0" text="Message Sort" HBox.hgrow="ALWAYS" />
                  <ComboBox fx:id="sortCombo" onAction="#changeForm" prefWidth="300.0" />
               </children>
            </HBox>
            <HBox fx:id="classHBox" spacing="10.0">
               <children>
                  <Label maxWidth="-Infinity" minWidth="-Infinity" prefWidth="80.0" text="Class" HBox.hgrow="ALWAYS" />
                  <ComboBox fx:id="classCombo" onAction="#setOperation" prefWidth="300.0" />
               </children>
            </HBox>
            <HBox fx:id="operationHBox" spacing="10.0">
               <children>
                  <Label maxWidth="-Infinity" minWidth="-Infinity" prefWidth="80.0" text="Operation" HBox.hgrow="ALWAYS" />
                  <ComboBox fx:id="operationCombo" prefWidth="300.0" />
               </children>
            </HBox>
            <HBox fx:id="lifelineNameHBox" spacing="10.0">
               <children>
                  <Label maxWidth="-Infinity" minWidth="-Infinity" prefWidth="80.0" text="Lifeline Name " HBox.hgrow="ALWAYS" />
                  <TextField fx:id="lifelineNameTextField" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="300.0" />
               </children>
            </HBox>
            <HBox fx:id="argumentsHBox" spacing="10.0">
               <children>
                  <Label maxWidth="-Infinity" minWidth="-Infinity" prefWidth="80.0" text="Arguments" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="argumentTextField" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="300.0" />
               </children>
            </HBox>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
               <buttons>
                  <Button fx:id="createButton" mnemonicParsing="false" onAction="#createMessage" text="Add Message" />
               </buttons>
            </ButtonBar>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
